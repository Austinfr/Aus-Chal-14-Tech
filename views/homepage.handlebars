<h1>The Tech Blog</h1>

{{#each posts}}
    <!-- passing into the template so that I don't have to repeat -->
    {{> post-template title=title postStamp=postStamp content=content id=id }}

{{/each}}

<!--only for when a post is clicked on-->
{{#if addComment}}
    <div>
        <div class="form-group">
            <label for="comment">Comment</label>
            <input class="form-input comment" type="text" id="comment" />
        </div>
    </div>
{{/if}}